{
  "manifest_version": 2,
  "name": "OpaqueTags",
  "version": "0.0.1",
  "description": "Keep your private things private.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/tag.webp"
    }
  },

  
  "icons": {
    "48": "icons/tag.webp"
  }
}
